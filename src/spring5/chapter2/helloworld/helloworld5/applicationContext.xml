<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	
	<bean id="p2" class="spring5.chapter2.helloworld.helloworld3.HelloWroldMessageProvider" >
	</bean>

	<bean id="provider"
		class="spring5.chapter2.helloworld.helloworld3.HelloWroldMessageProvider">
	</bean>
	<bean id="reader"
		class="spring5.chapter2.helloworld.helloworld3.StandardOutMessageReader" 
		p:messageProvider-ref="provider">
	</bean>
</beans>
